<h1>Listing comments</h1>

<table>
  <tr>
    <th>Place</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.place_id %></td>
    <td><%= comment.comment %></td>
    <td><%= link_to 'Show', place_comment_path(@place comment) %></td>
    <td><%= link_to 'Edit', edit_place_comment_path(@place comment) %></td>
    <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

